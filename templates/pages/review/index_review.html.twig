{% extends 'base.html.twig' %}

{% block title %} Reviews {% endblock %}
{% block body  %}


<div class="container-fluid py-4 px-2">
    <h2 class="text-center">Reviews</h2>
    <div class="row row-cols-lg-4 row-cols-1 gap-2 justify-content-center py-4">
        {% for review in reviews %}
          <div class="col py-4 shadow rounded-3 border border-secondary">
          <div class="d-flex justify-content-between align-items-center ">
          <a class="fw-light fs-6 link-secondary px-2" href='/book/{{review.book.id}}'>{{review.book.bookTitle}}</a>
          {% if app.user %}
          <div>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('delete_review', {'id' : review.id }) }}" class='btn btn-danger'><i class='bi bi-trash-fill'></i></a>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MOD') %}
                    <a href="{{ path('update_review', {'id' : review.id }) }}" class='btn btn-success'><i class='bi bi-pencil-square'></i></a>
                    {% endif %}
          </div>
           {% endif %}
          </div>
          
                <div class="d-flex flex-column">
                    <div class="d-flex justify-content-between py-2">
                        <div class="fw-light"><i class="bi bi-person-circle px-2"></i>
                        {{review.reviewer.email}}
                        </div>
                        <div>{{review.rating}}<i class="bi bi-star-fill px-1"></i></div>
                    </div>
                    <p class="px-2">{{review.reviewText}}</p>  
                </div>
          </div>
        {% endfor %}
    </div>

</div>

{% endblock %}