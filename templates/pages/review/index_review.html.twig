{% extends 'base.html.twig' %}

{% block title %} Reviews {% endblock %}
{% block body  %}


<div class="col-12 py-4">
    <h2 class="text-center">Reviews</h2>
    <div class="row row-cols-xl-5 row-cols-md-2 row-cols-sm-1 px-5 py-4">
        {% for review in reviews %}
          <div class="col py-4 shadow-lg mx-auto rounded-3">
          <div class="d-flex justify-content-between align-items-center">
          <a class="fw-light fs-6 link-secondary px-2" href='/book/{{review.book.id}}'>{{review.book.bookTitle}}</a>
          {% if app.user %}
          <div>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href='/review/delete/{{review.id}}' class='btn btn-danger'><i class='bi bi-trash-fill'></i></a>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MOD') %}
                    <a href='/review/update/{{review.id}}' class='btn btn-success'><i class='bi bi-pencil-square'></i></a>
                    {% endif %}
          </div>
           {% endif %}
          </div>
          
                <div class="d-flex flex-column">
                    <div class="d-flex justify-content-between py-2">
                        <div class="fw-light"><i class="bi bi-person-circle px-2"></i>
                        {{review.reviewer.email}}</div>
                        <div>{{review.rating}}<i class="bi bi-star-fill px-1"></i></div>
                    </div>
                    <p>{{review.reviewText}}</p>  
                </div>
          </div>
        {% endfor %}
    </div>

</div>

{% endblock %}