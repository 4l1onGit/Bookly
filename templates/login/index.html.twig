{% extends 'base.html.twig' %}
{% block title %} Login {% endblock %}
{% block body %}
    {% if error %}
    <div class="">{{ error.messageKey|trans(error.messageData, 'security' )}}</div>
    {% endif %}

    <form class="col-4 mx-auto py-5" action="{{ path('login') }}" method="post">
        <div class="mb-3">
            <label class="form-label" for="username">Email</label>
            <input class="form-control" type="email" id="username" name="_username" value="{{ last_username }}" />
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="_password"/>
        </div>

        
       
        <input type="hidden" name="_target_path" value="/" /> 
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn btn-primary" type="submit">login</button>
    </form>


{% endblock %}